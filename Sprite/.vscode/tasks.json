{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "type": "shell",
            "command": "cl65 -t nes -Oisr -c main.c"
        },
        {
            "label": "Link",
            "type": "shell",
            "command": "cl65 -C ../config/nrom.cfg -o nes.rom ../neslib2/crt0.o ../neslib2/pad.o ../neslib2/vram_read.o ../neslib2/oam_spr.o ../neslib2/neslib2.lib main.o ../resource/chr.o"
        },
        {
            "label": "Execute",
            "type": "shell",
            "command": "nestopia .\\nes.rom"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm",
            "args": [ 
                "*.o",
            ],
        },
        {
            "label": "Build and execute",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Compile",
                "Link",
                "Execute"
            ]
        },
    ]
}